<div class="blogs-container">

  <!-- This is the form for adding a new blog -->
  <div class="add-blog-container">
    <h2>
      create new blog post
    </h2>
    {{!-- <input class="form-control" type="text" placeholder="title:"> --}}
    <form class="new-blog-form">
      <label for="blog_name">
        title:
      </label>
      <textarea id="blog_name" name="blog_name" rows="2" cols="30">
      {{blog_name}}
    </textarea>
      <label for="description">
        content:
      </label>

      <textarea id="description" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
      <br />
      <button type="submit" value="Submit">
        create post
      </button>
    </form>
  </div>
</div>



<script src="/javascript/new-blog.js"></script>